<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.core.ztx.dao.UserMapper">
  <resultMap id="BaseResultMap" type="com.core.ztx.entity.User">
    <id column="ID" jdbcType="BIGINT" property="id" />
    <result column="LOGIN_NAME" jdbcType="VARCHAR" property="loginName" />
    <result column="LOGIN_PASS" jdbcType="VARCHAR" property="loginPass" />
  </resultMap>
  
  <select id="load" resultMap="BaseResultMap" parameterType="Long">
      select * from user where id = #{id} 
  </select>
  
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.core.ztx.entity.User">
      insert into user(id,login_name,login_pass) values(#{id}, #{loginName}, #{loginPass})
  </insert>
  
  <update id="updateById" parameterType="com.core.ztx.entity.User">
      update user set login_pass = #{loginPass} where id = #{id} 
  </update>
</mapper>